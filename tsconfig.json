{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "kaspa": ["wasm/kaspa"],
            "kaspa-web": ["wasm/kaspa-web"],
            "@env/kaspa": [
                "wasm/kaspa-node",
                "wasm/kaspa-web"
            ],
            "@/*": ["./src/*"]
        },
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
